<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_green"
    tools:context=".ui.view.login.LoginFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" />

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/eggplant_light"
        android:gravity="center"
        android:padding="@dimen/_20dp"
        android:text="@string/tvLoginTitle"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" />

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="emailAddress"
        android:ems="10"
        android:hint="@string/etLoginEmail"

        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColorHint="#000000"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16dp" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="password"
        android:ems="10"
        android:textSize="20sp"
        android:hint="@string/etLoginContrasenia"

        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#000000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnLoginAccess"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnRegister"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" />

    <ImageButton
        android:id="@+id/btn_login_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_google"
        android:background="@color/eggplant_light"
        tools:ignore="SpeakableTextPresentCheck"
        android:contentDescription="@string/google_icon" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20dp" />

    <ImageButton
        android:id="@+id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_facebook"
        android:background="@color/eggplant_light"
        tools:ignore="SpeakableTextPresentCheck2"
        android:contentDescription="@string/facebook_icon" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" />

    <Button
        android:id="@+id/btn_login_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cerrar_sesion"
        android:textSize="20sp" />

</LinearLayout>